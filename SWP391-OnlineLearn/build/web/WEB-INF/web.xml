<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>classesController</servlet-name>
        <servlet-class>controller.course.classesController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>courseController</servlet-name>
        <servlet-class>controller.course.courseController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>modulesController</servlet-name>
        <servlet-class>controller.course.modulesController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>moduleController</servlet-name>
        <servlet-class>controller.course.moduleController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>classesController</servlet-name>
        <url-pattern>/course/classes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>courseController</servlet-name>
        <url-pattern>/course/class_course</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modulesController</servlet-name>
        <url-pattern>/course/modules</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>moduleController</servlet-name>
        <url-pattern>/course/module</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
